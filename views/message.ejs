<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>here's a lil message for you</title>
    <link rel="stylesheet" href="./styles/message.css">
</head>
<body>
    <div class="container">
        <div class="envelope-wrapper">
            <div class="envelope">
                <div class="letter">
                    <div class="text">
                        <strong><%=messageMessage1%></strong>
                        <p>
                            <%=messageMessage2%> <br>

                            <%=messageMessage3%> <br>
                            <style>
                                a {
                                  color: red; 
                                  text-decoration: none;
                                }
                              </style>
                              
                              <a href="/messages" onClick="navigateWithZoom()">Click here to read more <%=messageEmoji1%></a>  
                              
                              <script>
                                function navigateWithZoom(){
                                    document.querySelector('.container').classList.add('zoomIn');

                        setTimeout(function () {
    window.location.href = "/messages";
  }, 1000);
                                }
                              </script>
                        </p>
                    </div>
                </div>
            </div>
            <div class="heart"></div>
        </div>
    </div>
    <script>
        const envelope = document.querySelector('.envelope-wrapper');
        envelope.addEventListener('click', () => {
            envelope.classList.toggle('flap');
        });
    </script>
</body>
</html>